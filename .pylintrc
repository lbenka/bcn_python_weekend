[MASTER]
# jobs=0 means 'use all CPUs'
jobs=0
extension-pkg-whitelist=lxml
max-args=7

[MESSAGES CONTROL]
disable =
  missing-docstring,
  line-too-long,
  invalid-name,
  no-value-for-parameter,
  no-member,
  unused-argument,
  broad-except,
  relative-import,
  wrong-import-position,
  wrong-import-order,
  bare-except,
  locally-disabled,
  protected-access,
  abstract-method,
  no-self-use,
  fixme,
  too-few-public-methods,
  ungrouped-imports,
  # this is problem with black formatter
  bad-continuation,

[REPORTS]
output-format=colorized

[FORMAT]
logging-modules=
  structlog,
  logging